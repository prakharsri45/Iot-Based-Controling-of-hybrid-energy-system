#include <ESP8266WiFi.h>
#include <ArduinoJson.h>

const char* ssid     = "hello-world";  
const char* password = "prakharsri1234";

const char* host     = "virattron.000webhostapp.com"; // Your domain  
String path          = "/light.json";  
const int pin        = 2;
const int pin0       = 0;

void setup() {  
  pinMode(pin, OUTPUT);
  pinMode(pin0, OUTPUT); 
  pinMode(pin, HIGH);
  pinMode(pin0, HIGH);
  Serial.begin(9600);

  delay(10);
  Serial.print("Connecting to ");
  Serial.println(ssid);

  WiFi.begin(ssid, password);
  int wifi_ctr = 0;
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }

  Serial.println("WiFi connected");  
  Serial.println("IP address: " + WiFi.localIP());
}

void loop() {  
  Serial.print("connecting to ");
  Serial.println(host);
  WiFiClient client;
  const int httpPort = 80;
  if (!client.connect(host, httpPort)) {
    Serial.println("connection failed");
    return;
  }

  client.print(String("GET ") + path + " HTTP/1.1\r\n" +
               "Host: " + host + "\r\n" + 
               "Connection: keep-alive\r\n\r\n");

  delay(500); // wait for server to respond

  // read response
  String section="header";
  while(client.available()){
    String line = client.readStringUntil('\r');
    // Serial.print(line);
    // weâ€™ll parse the HTML body here
    if (section=="header") { // headers..
      Serial.print(".");
      if (line=="\n") { // skips the empty space at the beginning 
        section="json";
      }
    }
    else if (section=="json") {  // print the good stuff
      section="ignore";
      String result = line.substring(1);

      // Parse JSON
      int size = result.length() + 1;
      char json[size];
      result.toCharArray(json, size);
      StaticJsonBuffer<200> jsonBuffer;
      JsonObject& json_parsed = jsonBuffer.parseObject(json);
      if (!json_parsed.success())
      {
        Serial.println("parseObject() failed");
        return;
      }
      
     // Make the decision to turn off or on the LED
      if (strcmp(json_parsed["light"], "solar") == 0) {
        digitalWrite(pin, HIGH);
        digitalWrite(pin0, LOW); 
        Serial.println("Solar ON");
      }  
      else if (strcmp(json_parsed["light"], "wind") == 0){
        digitalWrite(pin0, HIGH);
        digitalWrite(pin, LOW);
        Serial.println("Wind ON");
      }
      else if (strcmp(json_parsed["light"], "off") == 0){
        digitalWrite(pin0, LOW);
        digitalWrite(pin, LOW);
        Serial.println("off");
      }
    }
  }
  Serial.print("closing connection. ");
}
